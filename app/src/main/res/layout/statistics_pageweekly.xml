<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="#EEEEEE"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<TextView
		android:id="@+id/statistics_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingVertical="@dimen/activity_vertical_margin"
		android:gravity="center"
		android:text="Statistics"
		android:textSize="32sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/enrgy_usg_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingHorizontal="@dimen/activity_horizontal_margin"
		android:text="Energy Usage"
		android:textSize="24sp"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@+id/statistics_txt"
		tools:layout_editor_absoluteX="16dp" />

	<HorizontalScrollView
		android:id="@+id/horizontalScrollView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/enrgy_usg_txt">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/linearLayout3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingHorizontal="@dimen/activity_horizontal_margin"
				android:paddingVertical="@dimen/activity_vertical_margin">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingEnd="18dp"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="170dp"
						android:layout_height="70dp"
						android:layout_gravity="center"
						android:background="@drawable/statistics_room_bg">

						<TextView
							android:id="@+id/kitchen_d1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:paddingTop="10dp"
							android:text="Kitchen D1"
							android:textSize="18sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/_10_2_kwh_252_45__"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@+id/kitchen_d1"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:text="2.55 kWh 63.11€"
							android:textSize="16sp" />
					</RelativeLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:paddingEnd="18dp"
					android:orientation="vertical">

					<RelativeLayout
						android:layout_width="170dp"
						android:layout_height="70dp"
						android:layout_gravity="center"
						android:background="@drawable/statistics_room_bg">

						<TextView
							android:id="@+id/living_room_d4"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:paddingTop="10dp"
							android:text="Living Room D4"
							android:textSize="18sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/_5_3_kwh_131_18__"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@+id/living_room_d4"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:text="1.325 kWh 32.80€"
							android:textSize="16sp" />
					</RelativeLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:paddingEnd="18dp">

					<RelativeLayout
						android:layout_width="170dp"
						android:layout_height="70dp"
						android:layout_gravity="center"
						android:background="@drawable/statistics_room_bg">

						<TextView
							android:id="@+id/bedroom_2_d3"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:paddingTop="10dp"
							android:text="Bedroom 2 D3"
							android:textSize="18sp"
							android:textStyle="bold" />

						<TextView
							android:id="@+id/_2_2_kwh_54_45__"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@+id/bedroom_2_d3"
							android:layout_alignParentStart="true"
							android:paddingStart="10dp"
							android:text="0.55 kWh 13.61€"
							android:textSize="16sp" />
					</RelativeLayout>
				</LinearLayout>

			</LinearLayout>

			<LinearLayout
