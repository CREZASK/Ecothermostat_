<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	android:background="#FFFFFF">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginVertical="40dp"
		tools:layout_editor_absoluteY="40dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:orientation="vertical"
			android:paddingHorizontal="@dimen/activity_horizontal_margin"
			android:paddingVertical="@dimen/activity_vertical_margin">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/living_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house"
					android:orientation="vertical">

					<TextView
						android:id="@+id/liv_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Living Room"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/liv_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Heating"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/liv_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="21°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/liv_targ_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 20°"
				android:textColor="#000000"
				android:textSize="16sp" />


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house1"
					android:layout_width="40dp"
					android:layout_height="50dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/kitchen_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house1"
					android:orientation="vertical">

					<TextView
						android:id="@+id/kitchen"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Kitchen"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/k_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Off"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/kitchen_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="27°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/k_target_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 23°"
				android:textColor="#000000"
				android:textSize="16sp" />


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house2"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/bedroom_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house2"
					android:orientation="vertical">

					<TextView
						android:id="@+id/bedroom1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Bedroom 1"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/bedroom1_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Cooling"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/bedroom1_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="16°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/targ_bed1_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 18°"
				android:textColor="#000000"
				android:textSize="16sp" />


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house3"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/bedroom_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house3"
					android:orientation="vertical">

					<TextView
						android:id="@+id/bedroom2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Bedroom 2"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/bedroom2_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Heating"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/bedroom2_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="22°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/bedroom2_target_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 18°"
				android:textColor="#000000"
				android:textSize="16sp" />


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house4"
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/office_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house4"
					android:orientation="vertical">

					<TextView
						android:id="@+id/office"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Office"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/office_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Cooling"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/office_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="27°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/o_targ_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 21°"
				android:textColor="#000000"
				android:textSize="16sp" />


			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:background="#F8F8F8"
				android:padding="16dp">

				<ImageView
					android:id="@+id/house5"
					android:layout_width="50dp"
					android:layout_height="40dp"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:contentDescription="House icon"
					android:src="@drawable/bathroom_st" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_marginStart="16dp"
					android:layout_toEndOf="@id/house5"
					android:orientation="vertical">

					<TextView
						android:id="@+id/bathroom"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Bathroom"
						android:textColor="#000000"
						android:textSize="16sp" />

					<TextView
						android:id="@+id/bathroom_status"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Off"
						android:textColor="#000000"
						android:textSize="14sp" />
				</LinearLayout>

				<TextView
					android:id="@+id/bathroom_temp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_centerVertical="true"
					android:text="22°"
					android:textColor="#000000"
					android:textSize="16sp" />
			</RelativeLayout>

			<TextView
				android:id="@+id/target_bath_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="8dp"
				android:text="Target: 24°"
				android:textColor="#000000"
				android:textSize="16sp" />

		</LinearLayout>
	</ScrollView>

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="horizontal"
		android:paddingVertical="10dp"
		app:layout_constraintBottom_toBottomOf="parent">

		<ImageView
			android:id="@+id/home_nav"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:contentDescription="@string/home_nav"
			android:src="@drawable/home_light"
			android:onClick="onHomeClick"/>

		<ImageView
			android:id="@+id/status_nav"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:contentDescription="@string/status_nav"
			android:onClick="onStatusClick"
			android:src="@drawable/status_dark" />

		<ImageView
			android:id="@+id/statistics_nav"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:contentDescription="@string/statistics_nav"
			android:onClick="onStatisticsClick"
			android:src="@drawable/history_light" />

		<ImageView
			android:id="@+id/settings_nav"
			android:layout_width="50dp"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_weight="1"
			android:contentDescription="@string/settings_nav"
			android:onClick="onSettingsClick"
			android:src="@drawable/settings_light" />

	</LinearLayout>

	<TextView
		android:id="@+id/statistics_txt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:paddingVertical="@dimen/activity_vertical_margin"
		android:text="Status"
		android:textSize="32sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.562"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
